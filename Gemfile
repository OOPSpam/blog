# frozen_string_literal: true
source "https://rubygems.org"

# Use Jekyll directly instead of github-pages for custom plugins
gem 'jekyll', '~> 3.10.0'

# Kramdown and parser for GitHub Flavored Markdown
gem 'kramdown', '~> 2.3'
gem 'kramdown-parser-gfm'

# Jekyll plugins
gem 'jekyll-tagging'
gem 'jekyll-tagging-related_posts'
gem 'jekyll-paginate'
gem 'jekyll-seo-tag'
gem 'jekyll-sitemap'
gem 'jekyll-feed'

# Additional dependencies that github-pages usually provides
gem 'rouge' # syntax highlighter
gem 'safe_yaml'

group :jekyll_plugins do
  gem 'jekyll-tagging'
  gem 'jekyll-tagging-related_posts'
  gem 'jekyll-paginate'
  gem 'jekyll-seo-tag'
  gem 'jekyll-sitemap'
  gem 'jekyll-feed'
end
